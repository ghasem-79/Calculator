<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorCalculatorBackground</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- API 23 (android 6)-->
        <item name="android:windowLightStatusBar">true</item>

        <!-- API 27 (android 8.1) -->
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/colorCalculatorBackground</item>

        <item name="colorControlHighlight">@color/colorOperationBackground</item>
    </style>

</resources>